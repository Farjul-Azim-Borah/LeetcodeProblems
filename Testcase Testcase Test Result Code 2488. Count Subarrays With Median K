class Solution {
public:
    int countSubarrays(vector<int>& nums, int k) {
        int ind = 0;
        int n = nums.size();
        for(int i = 0; i<n; ++i){
            if(nums[i]>k){
                nums[i] = 1;
            }else if(nums[i]<k){
                nums[i] = -1;
            }else{
                nums[i] = 0;
                ind = i;
            }
        }

        map<int , int> mp;
        int sum = 0;
        for(int i = ind; i>=0; --i){
            sum += nums[i];
            mp[sum]++;
        }

        sum = 0;
        int ans = 0;
        for(int i = ind; i<n; ++i){
            sum += nums[i];
            int newsum = -sum;

            if(mp.find(newsum) != mp.end()){
                ans += mp[newsum];
            }
            newsum += 1;
            if(mp.find(newsum) != mp.end()){
                ans += mp[newsum];
            }
        }
        return ans;

    }
};
