class Solution {
public:
    long long minimumOperations(vector<int>& nums, vector<int>& target) {
        long long ans = 0;
        int n = nums.size();
        int inc = 0 , dec = 0;
        for(int i = 0; i<n; ++i){
            int diff = target[i]-nums[i];

            if(diff>0){
                if(inc < diff){
                    ans += diff-inc;
                }
                inc = diff;
                dec = 0;
            }else if(diff < 0){
                if(dec > diff){
                    ans += dec -diff;
                }
                dec = diff;
                inc = 0;
            }else{
                inc = 0;
                dec = 0;
            }
        }
        return ans;
    }
};
